# ==============================================
# Environment Variables for PlanificacionDH
# ==============================================
# Copy this file to .env and fill in the values

# ==============================================
# REQUIRED FOR PRODUCTION
# ==============================================

# PostgreSQL connection string (Cloud SQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# For Cloud SQL with Cloud Run, use Unix socket:
# DATABASE_URL=postgresql://USER:PASSWORD@/DATABASE?host=/cloudsql/PROJECT:REGION:INSTANCE
DATABASE_URL=

# Session secret (generate with: openssl rand -hex 64)
SESSION_SECRET=

# ==============================================
# OPTIONAL
# ==============================================

# Server port (Cloud Run sets this automatically to 8080)
PORT=3000

# Node environment (development | production)
NODE_ENV=development

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ==============================================
# RENDER (Free tier available)
# ==============================================
# Render sets DATABASE_URL automatically when you link a PostgreSQL database
# No manual configuration needed - just connect your repo and deploy!

# ==============================================
# GOOGLE CLOUD SPECIFIC (for Cloud Run deployment)
# ==============================================

# Google Cloud Project ID
# GCP_PROJECT_ID=your-project-id

# Cloud SQL Instance Connection Name
# Format: PROJECT_ID:REGION:INSTANCE_NAME
# CLOUD_SQL_CONNECTION_NAME=your-project:us-central1:planificacion-db
